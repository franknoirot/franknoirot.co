<div class='book-grid'>
{% for book in collections.books | sort %}
  <div class='book' data-title='{{ book.data.title }}'>
    <img src='{{ book.data.cover }}' alt='{{ book.data.title }} cover'/>
    <h2>{{ book.data.title }}</h2>
    <p class='subtitle'>{{ book.data.subtitle }}</p>
    <p>by {{ book.data.author }}</p>
  </div>
{% endfor %}
</div>
